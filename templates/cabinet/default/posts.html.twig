{% extends 'base.html.twig' %}
{% block body %}

    <div class="container-fluid">
        <div class="row">
            {% embed "cabinet/navigation.html.twig" %}{% endembed %}
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="add-new">
                    <a href="{{ path('app_cabinet_post_add') }}" class="add-new-post">Add new Post</a>
                </div>
                <h2>Your Posts</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr>
                            <th>Post title</th>
                            <th>Post content</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.title }}</td>
                                <td>{{ post.content }}</td>
                                <td><a href="{{ path('app_cabinet_post_edit', {'id' : post.id}) }}">Edit</a></td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>

{% endblock %}
