{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    {{ form_start(registrationForm, {'attr' : {'class' : 'form-signin text-center'}}) }}
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>
        {{ form_row(registrationForm.email, {'attr': {'placeholder': 'Email', 'class': 'w-100'} }) }}
        {{ form_row(registrationForm.plainPassword, {'attr': {'placeholder': 'Password', 'class': 'w-100'} }) }}

        <button class="btn btn-lg btn-primary btn-block">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
